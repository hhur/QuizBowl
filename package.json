{
  "name": "quizbowlhub",
  "private": true,
  "description": "Quiz Bowl Practice & Competition Platform",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@quizbowlhub/docs && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@quizbowlhub/config": "*",
    "prettier": "^3.0.3",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  },
  "packageManager": "npm@9.8.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "@types/socket.io": "^3.0.2",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.67.3",
    "redis": "^4.6.7",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  }
}
